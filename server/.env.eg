# App Configuration
PORT=4040
NODE_ENV=development
APP_URL=http://localhost:4040
APP_NAME=livecompo

# Database Configuration
MONGO_URI=mongodb://localhost:27017/livecompo

# Rate Limiting
GLOBAL_RATE_LIMIT_MAX=1000
PER_IP_RATE_LIMIT_MAX=100

# LLM Provider Configuration
# Options: 'gemini', 'ollama', 'openai'
MODEL_PROVIDER=ollama

GOOGLE_API_KEY=
GEMINI_MODEL=

# Ollama Configuration (when MODEL_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_LLM_MODEL=llama3.2:latest

# OpenAI Configuration (fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=

# JWT Configuration (if authentication needed later)
JWT_SECRET=livecompo_jwt_secret_key_2025
JWT_EXPIRY=1d
JWT_REFRESH_SECRET=livecompo_refresh_secret_key_2025
JWT_REFRESH_EXPIRY=7d
